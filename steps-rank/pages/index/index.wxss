.page-top {
  height: 450rpx;
}

.color-lump {
  background: linear-gradient(#3590FB, #6ECBFF);
  height: 350rpx;
}
.rankBg{
  position:absolute;
  left:0;
  right:0;
  bottom:0;
  top:0;
  width:100%;
  height:100%;

}
.user-card {
  position: absolute;
  left: 50rpx;
  top: 175rpx;
  border-radius: 12rpx;
  margin:0 auto;
  width: 650rpx;
  height: 750rpx;
  background: rgb(237,250,241);
  /*box-shadow: 0px 0px 12px #6ECBFF;*/
}

.user-avatar {
  position: absolute;
  left: 225rpx;
  top: -100rpx;
}

.user-avatar > image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}

.user-avatar .user-name {
  /* color: #5898F1; */
  margin-top: 10rpx;
  font-size: 38rpx;
  text-align: center;
}

.user-card-info {
  width: 140rpx;
  color: #999;
  top: 300rpx;
  text-align: center;
}

.steps-today {
  position: absolute;
  left: 110rpx;
}

.top-this-week {
  position: absolute;
  right: 110rpx;
}

.user-card-info-title {
  font-size: 30rpx;
  margin-bottom: 25rpx;
}

.user-card-info-content {
  font-size:45rpx;
  white-space: nowrap;
}

.share{
  position:absolute;
  margin:0 auto;
  text-align: center;
  left: 225rpx;
  top:750rpx;
}







.steps-rank-container {
  margin: auto;
  padding-top: 24rpx;
  width: 700rpx;
}

.steps-rank-title {
  color: #5898F1;
  font-size: 28rpx;
  margin-bottom: 12rpx;
}

.steps-rank-item {
  border: solid 1px #D5ECFF;
  border-radius: 8rpx;
  height: 100rpx;
  margin-top: 12rpx;
  overflow: auto;
}

.item-left {
  float: left;
  position: relative;
  top: 15rpx;
  left: 20rpx;
  height: 70rpx;
}

.item-right {
  position: relative;
  float: right;
  top: 15rpx;
  height: 70rpx;
}

.item-user-avatar > image {
  height: 70rpx;
  width: 70rpx;
  border-radius: 50%;
}

.item-user-text {
  position: relative;
  left: 90rpx;
  top: -80rpx;
}

.item-user-name {
  font-size: 28rpx;
  color: #333333;
}

.item-user-rank {
  margin-top: 5rpx;
  font-size: 20rpx;
  color: #999999;
}

.item-steps {
  color: #FF7420;
  font-size: 36rpx;
  position: relative;
  top: 12rpx;
  right: 110rpx;
  text-align: right;
}

.item-likes {
  position: relative;
  top: -55rpx;
  width: 100rpx;
  text-align: center;
}

.item-likes-count {
  position: relative;
  color: #999999;
  font-size: 24rpx;
}

.item-likes-heart {
  font-size: 28rpx;
  color: #CCCCCC;
}

.item-likes-heart-liked {
  color: #FF3862;
}
