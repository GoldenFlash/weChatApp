<image class="rankBg" src="../../static/rankBg.jpg"></image>
<view class="steps-rank-container">
    <view class="user-avatar">
        <view class="image-wrapper">
            <image src="{{userInfo.avatarUrl}}" background-size="cover"></image>
        </view>
        <view class="user-name">
            <text>{{userInfo.nickName}}</text>
        </view>
        <view style="margin-top: 20rpx" wx:if="{{rankList}}">
            <view style="width:50%;text-align: center;display: inline-block;">
                <text>第{{selfRank.user_rank}}名</text>
            </view>
            <view style="width:50%;text-align: center;display: inline-block;">
                <text>{{selfRank.user_steps}}步</text>
            </view>
        </view>
    </view>
    <view class="steps-rank-list">
        
        <view  wx:for="{{rankList}}"  class='steps-rank-item {{index == selfRank.user_rank-1 ? "self" : ""}}'>

            <view class="item-left" style="display:flex;align-items: center;">
                <view class="item-user-rank" style="flex:1">
                        <text>{{index + 1}}</text>
                    </view>
                <view class="item-user-avatar" style="flex:1;text-align: left;margin-right:40rpx">
                    <image src="{{item.user.avatar}}" style="height:90rpx;width:90rpx"></image>
                </view>
                <view class="item-user-text" style="flex:1;margin-right:130rpx">
                    <view class="item-user-name" style="text-align: left;">
                        <text>{{item.user.name}}</text>
                    </view>
                    
                </view>
                <view class="item-steps" style="flex:1;margin-right: 50rpx">
                    <text class='{{index == 0 ? "first" : ""}} {{index>0 && index <3 ? "second":""}} {{index >=3 ? "others":""}}'>{{item.todayRanks}}</text>
                </view>   
            </view>

        </view>
    </view>
    <view class="share">
      <button type="primary" size="default" bindTap="onShareAppMessage" open-type="share">分享到其他微信群</button>
    </view>
</view>