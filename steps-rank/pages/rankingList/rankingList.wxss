.rankBg{
  position:absolute;
  left:0;
  right:0;
  bottom:0;
  top:0;
  width:100%;
  height:100%;

}
.steps-rank-container{
  position:absolute;
  left:50%;
  transform: translateX(-50%);
  width:92%;
  margin:0 auto;
  /*border:solid red 1px;*/
  height:94vh;
  border-radius: 15rpx;
  /*border-radius: 50%;*/
  margin-top: 40rpx;
  background-color: #fff;
}
.steps-rank-container .user-avatar {
  border-radius: 15rpx 15rpx 0 0;
  padding-top: 20rpx;
  height:300rpx;
  width:100%;
  background-color:rgb(237,250,241);
  text-align: center;
  /*border-bottom: solid 1px rgb(223,234,228) ;*/
}
.steps-rank-container .user-avatar .image-wrapper{
  height:150rpx;
}
.steps-rank-container .user-avatar .image-wrapper > image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;

}
.self{
  background-color:#EDFAF1 ;
}
 .first{
  color:#C50000;
 }
 .second{
  color:#D87609;
 }
 .others{
  color:rgb(136,136,136);
 }
.steps-rank-container .user-name{
  margin:20rpx;
  height:50rpx;
  text-align: center;
}
