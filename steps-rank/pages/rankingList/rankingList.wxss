.steps-rank-list .steps-rank-item {
  border-top: solid 1px rgb(223,234,228);
  /*border-radius: 8rpx;*/
  height: 100rpx;
  /*margin-top: 12rpx;*/
  display: flex;
  align-items: center;
}
.steps-rank-list > view:last-child{
  border-bottom: solid 1px rgb(223,234,228);
}

.steps-rank-list .steps-rank-item .item-left {
  flex:1;
  display:flex;
  text-align: left;
  margin-left: 50rpx;
}
.steps-rank-list .steps-rank-item .item-left .item-user-avatar{
  flex:1;
  
}
.steps-rank-list .steps-rank-item .item-left .item-user-avatar image{
  height: 70rpx;
  width: 70rpx;
  border-radius: 50%;

}
.steps-rank-list .steps-rank-item .item-left .item-user-text{
  flex:1;
}
