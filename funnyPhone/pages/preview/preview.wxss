/* pages/preview/preview.wxss */
.wrapper{
	width:100%;
	height:100%;
	position: relative;
}
.wrapper .background {
	position:absolute;
	left:0;
	bottom:0;
	right:0;
	bottom:0;
	width:100%;
	height:100vh;
}
.wrapper .video{
	position:absolute;
	width:100%;
	height:100vh;
	background-color:rgba(0,0,0,0.9); 
}
.wrapper .video .image-wrapper image{
	height:250rpx;
	width:250rpx;
	border-radius: 20rpx;
}
.wrapper .video .image-wrapper{
	margin:80rpx 0;
	text-align: center;
}
.wrapper .video .image-wrapper >view{
	font-size: 56rpx;
	color:#FFF;
	margin-top: 20rpx;
}
.wrapper .video .icon{
	display:flex;
	text-align: center;
	align-items: center;
	/*justify-content: center;*/
	margin-top: 500rpx;
	color:#FFF;
}
.wrapper .video .icon .uncall image,.wrapper .video .icon .call image{
	height:151rpx;
	width:151rpx;
	margin: 0 112rpx;
}

