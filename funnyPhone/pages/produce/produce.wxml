<import src="../../zanui-weapp/dist/field/index.wxml" />
<view class="producePage" catchtap="cancel">
    <view class="form">
        <view class="zan-cell zan-cell--access" catchtap="chooseImage">
            <view class="zan-cell__bd image">
                <text style="font-size: 36rpx;">更换头像</text>
                <image src="{{workInfo.image}}" style="width:100rpx;height:100rpx"></image>
            </view>
            <view class="zan-cell__ft"></view>
        </view>
        <view class="zan-cell zan-cell--access">
            <view class="zan-cell__bd name">
                <text style="font-size: 36rpx;">姓名</text>
                <view style="font-size: 36rpx">{{workInfo.name}}</view>
            </view>
        </view>
    </view>
    <view class="tap">
    	<view>{{tapeMessage}}</view>
    	<view class="startTape"  wx:if="{{!startTape}}">
    		<image src="../../svg/keyboard-voice(1).svg" catchtap="startTape"></image>
    	</view>
		<view class="startTape"  wx:else="{{startTape}}">
    		<image src="../../svg/stop(2).svg" wx:if="{{onTape}}" catchtap="onTape"></image>
    		<image src="../../svg/play(2).svg" wx:else="{{!onTape}}"  catchtap="onTape"></image>
	    	<view class="release" wx:if="{{!onTape}}">
	    		<button catchtap="goPreview">预览</button>
	    		<button open-type="share">分享</button>
	    	</view>
    	</view>
    </view>
</view>