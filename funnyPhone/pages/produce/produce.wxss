/* pages/produce/produce.wxss */
.producePage{
	background-color: #F8F8F8;
	height: 100vh;
	width:750rpx;
}
.producePage .form{
	/*padding-top: 15rpx;*/
	overflow: hidden;
	width:750rpx;
	
	
}
.producePage .form .zan-cell{
	background-color: #FFF;
	margin-bottom:10rpx;
	border:solid #EDEDED 1px;
	border-right: none;
	border-left: none;
} 
.producePage .form .blank{
	height:50rpx;
	background-color: #FFF;
}
.producePage .form .image{
	display:flex;
	align-items: center;
	margin-bottom: 10rpx;
	/*background-color: #FFF;*/
	height:120rpx;
	line-height: 120rpx;
	padding-left: 20rpx;
}
.producePage .form .image image{
	width:100rpx;
	height:100rpx;
	margin-left: 100rpx;

}

.producePage .form .name{
	display:flex;
	background-color: #FFF;
	height:120rpx;
	line-height: 120rpx;
	padding-left: 20rpx;
}
.producePage .form .name view:nth-child(2){
	margin-left: 160rpx
}


.producePage .tap{
	position:absolute;
	height:450rpx;
	width:100%;
	bottom:0;
	background-color: #fff;
}
.producePage .tap >view:nth-child(1){
	text-align: center;
	margin-top: 30rpx;
}
.producePage .tap .startTape{
	text-align: center;
	margin-top: 30rpx;
	font-size: 40rpx;
	color:red;
	
}
.producePage .tap .startTape image{
	height:200rpx;
	width:200rpx;
}
.producePage .tap .release{
	display: flex;
	/*border:solid red 1px;*/
	margin-top: 50rpx;
	height:80rpx;
}
.producePage .tap .release >button{
	flex:1;
	text-align: center;
	border:solid #EBEBEB 1px;
	border-bottom: none;
	line-height: 80rpx;
}