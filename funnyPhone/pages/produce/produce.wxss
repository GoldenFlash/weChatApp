/* pages/produce/produce.wxss */
.producePage{
	background-color: #F8F8F8;
	height: 90vh;
	width:750rpx;
}
.producePage .form{
	/*padding-top: 15rpx;*/
	overflow: hidden;
	width:750rpx;
	
	
}
.producePage .form .zan-cell{
	background-color: #FFF;
	margin-bottom:10rpx;
	border:solid #EDEDED 1px;
	border-right: none;
	border-left: none;
} 
.producePage .form .blank{
	height:50rpx;
	background-color: #FFF;
}
.producePage .form .image{
	display:flex;
	align-items: center;
	margin-bottom: 10rpx;
	/*background-color: #FFF;*/
	height:120rpx;
	line-height: 120rpx;
	padding-left: 20rpx;
}
.producePage .form .image image{
	width:100rpx;
	height:100rpx;
	margin-left: 100rpx;

}

.producePage .form .name{
	display:flex;
	background-color: #FFF;
	height:120rpx;
	line-height: 120rpx;
	padding-left: 20rpx;
}

.producePage .form .name view{
	margin-left: 160rpx;
	line-height:120rpx; 
}
.producePage .form .name .input{
	line-height:120rpx; 
}


.producePage .tap{
	position:absolute;
	height:450rpx;
	width:100%;
	bottom:0;
	background-color: #fff;
}
.producePage .tap >view:nth-child(1){
	position: relative;
	text-align: center;
	margin-top: 30rpx;
	/*display: inline-block;*/
}
.producePage .tap >view:nth-child(2){
	position: absolute;
	right:340rpx;
	top:30rpx;
	text-align: center;
	margin-top: 30rpx;
	display:inline-block;
	color:#F86767;
}
.producePage .tap .startTape{
	text-align: center;
	margin-top: 20rpx;
	/*height:500rpx;*/
	font-size: 40rpx;
	color:red;
	
}
.producePage .tap .startTape image{
	height:180rpx;
	width:180rpx;
}
.producePage .tap .release{
	position: fixed;
	bottom:0;
	width:100%; 
}

.producePage .tap .release .share{
	position: absolute;
	width:90%;
	bottom:90rpx;
	left:50%;
	transform: translateX(-50%);
	background-color:transparent;
	height:70rpx;
	line-height: 70rpx;
	color:#FF3c30;
}
.producePage .tap .release .share:after{
	border:solid #F86767 1px;
	border-radius:70rpx; 
}
.producePage .tap .release .button{
	
	bottom:0;
	display: flex;
	/*border:solid red 1px;*/
	/*margin-top: 50rpx;*/
	height:80rpx;
}
.producePage .tap .release .button >button{
	flex:1;
	text-align: center;
	border:solid #EBEBEB 1px;
	border-bottom: none;
	line-height: 70rpx;
	background-color: transparent;
	color:#F86767;
	height:70;
}
.producePage .tap .release .button button::after{
	border:none;
}