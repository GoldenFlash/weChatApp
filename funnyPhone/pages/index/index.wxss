/**index.wxss**/

.container{
  width:100%;
  height:100%;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  height:300rpx;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  /* color: #aaa; */
}
.works{
  margin-top:10rpx;
  margin-bottom:20rpx;
  font-size:26rpx;
}
.works-wrapper{
/*height:100vh;*/
width:100%;
/* border:solid red 1px; */
background-color: #F1F1F1;
}
.work-item{
  height:200rpx;
  box-sizing: border-box;
  /* border:solid blue 1px; */
  padding:0 30rpx;
  margin:20rpx 0;
  background-color: #FFFFFF;
}
.work-item .main{
  display:flex;
  border-bottom:solid #F1F1F1 1px; 
  height:120rpx;
  align-items:center;
  
}
.work-item .main .workInfor{
  /* vertical-align:bottom; */
  flex:1;
}
.work-item .main .time{
  color:#A6A6A6;
  font-size: 24rpx
}

.work-item .main .share{
  box-sizing:border-box;
  height:120rpx;
  width:90rpx;
  padding:20rpx;
  background: transparent;
  line-height: 30rpx

}
.work-item .main .share:after{
  border:none;
}
.work-item .main .share >image{
  height:50rpx;
  width:50rpx;
  margin:0;
  
}
.work-item .main .share >text{
  /*height:30rpx;*/
  width:50rpx;
  font-size: 20rpx;
  display:block;
  color:#F56565;

  
}
.works-wrapper .work-item .icon{
  height:90rpx;
  width:80rpx;
  line-height: 120rpx;
  /* vertical-align:bottom; */
}
.works-wrapper .work-item .icon>image{
  height:50rpx;
  width:50rpx;
  /* line-height: 120rpx; */
}
.works-wrapper .work-item .remarks{
  font-size:26rpx;
}
.works-wrapper .work-item .addition{
  height:30rpx;
  /*width:100%;*/
  /* border:solid yellow 1px; */
  line-height: 20rpx
  
}
.works-wrapper .work-item .addition .related{
  display: flex;
  color:#A6A6A6;
  font-size: 26rpx;
}
.works-wrapper .work-item .addition .related view{
  flex:1;
  /*margin:0 20rpx;*/
}
.container .add{
    position:fixed;
    bottom:20rpx;
    width:300rpx;
    height:200rpx;
    /* border:solid red 1px; */
    text-align: center;
}
.container .add .zan-icon-add{
    font-size:150rpx;
    color:red;
}