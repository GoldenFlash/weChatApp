/* pages/preview/preview.wxss */
.wrapper{
	width:100%;
	height:100%;
	position: relative;
}
.wrapper .background {
	position:absolute;
	left:0;
	bottom:0;
	right:0;
	bottom:0;
	width:100%;
	height:100vh;
}
.wrapper .video{
	position:absolute;
	width:100%;
	height:100vh;
	background-color:rgba(0,0,0,0.8); 
}
.wrapper .video .image-wrapper image{
	height:230rpx;
	width:230rpx;
	border-radius: 20rpx;
}
.wrapper .video .image-wrapper{
	/*margin:90rpx 0;*/
	margin-top:80rpx;
	margin-bottom: 100rpx;
	text-align: center;
}
.wrapper .video .image-wrapper >view{
	font-size: 46rpx;
	height:100rpx;
	color:#FFF;
	margin-top: 20rpx;
}
.wrapper .video .icon{
	display:flex;
	text-align: center;
	align-items: center;
	/*justify-content: center;*/
	margin-top: 550rpx;
	color:#FFF;
}
.wrapper .video .icon .uncall image,.wrapper .video .icon .call image{
	height:134rpx;
	width:134rpx;
	margin: 0 120.5rpx;
}

