/*滑动轮播图的样式*/
.moban {
  width: 450rpx;
  position: relative;
  left: 50%;
  top: 30rpx;
  margin-left: -225rpx;
  margin-bottom: 80rpx;
}

.moban view {
  position: absolute;
  display: flex;
  justify-content: center;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  transition: 0.5s all ease;
}

.moban image {
  width: 450rpx;
  height: 100%;
  box-shadow: 0 0 10px #999;
  border-radius: 5px;
}

.l1 {
  opacity: 0;
  transform: translateX(-460rpx) scale(.9, .9);
  z-index: 1;
}

.l2 {
  opacity: 0.5;
  transform: translateX(-460rpx) scale(.9, .9);
  z-index: 2;
}

.cur {
  opacity: 1;
  transform: scale(1, 1);
  z-index: 5;
}

.r1 {
  opacity: 0.5;
  transform: translateX(460rpx) scale(.9,.9);
  z-index: 2;
}

.r2 {
  opacity: 0;
  transform: translateX(460rpx) scale(.9, .9);
  z-index: 1;
}
.left {
  width: 120rpx;
  background: red;
  position: absolute;
  left: 0;
  z-index: 77;
  opacity: 0;
}

.right {
  width: 120rpx;
  background: red;
  position: absolute;
  opacity: 0;
  right: 0;
  z-index: 77;
}
.paster {
  width: 0px;
  height: 0px;
  border-top: 40px solid transparent;
  border-bottom: 40px solid transparent;
  border-left: 40px solid transparent;
  transform: rotate(45deg);
  display: block;
  position: absolute;
  top: -35px;
  left: -35px;
  pointer-events:none;
}

.paster_text {
  display: block;
  position: absolute;
  top: 12px;
  left: 12px;
  transform: rotate(-45deg);
  color: #fff;
  font-size: 11pt;
}
