/*微信对话*/
.weixin_dialog {
   position: relative;
   border-radius: 9rpx;
   margin-left: 10.43rpx;
   background-repeat: no-repeat;
 }

.weixin_dialog image {
  position: relative;
  border-radius: 9rpx;
  display: block;
}

.weixin_dialog:after {
  content: '';
  position: absolute;
  top: 15rpx;
  left: -19.86rpx;
  border: solid #ebebeb;
  border-width: 10.43rpx;
  border-right-color: transparent;
  background: inherit;
  /* background-size: auto; */
  /* background-clip: border-box;   */
  background-origin: border-box;
  background-position: 10.43rpx -14rpx;
}

.my_weixin_dialog {
  position: relative;
  border-radius: 9rpx;
  margin-right: 10.43rpx;
  background-repeat: no-repeat;
}
.my_weixin_dialog:after {
  content: '';
  position: absolute;
  top: 15rpx;
  right: -19.86rpx;
  border: solid #ebebeb;
  border-width: 10.43rpx;
  border-left-color: transparent;
  background: inherit;
  /* background-size: auto; */
  /* background-clip: border-box;   */
  background-origin: border-box;
  background-position: -10.436rpx -14rpx;
}
.my_weixin_dialog image {
  position: relative;
  border-radius: 9rpx;
  display: block;
}

