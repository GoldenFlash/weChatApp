.questions {
  position: relative;
  width: 750rpx;
  height: 100vh;
}

.question {
  position: absolute;
  top: 3%;
  left: 7.5%;
  width: 85%;
  height: 90%;
  padding: 30rpx;
  background-color: #fff;
  border-radius: 8rpx;
  box-sizing: border-box;
  box-shadow: 1px 1px 5px 5px #e5e5e5;
  transition: 1s all ease;
}

.answer {
  position: relative;
  padding: 30rpx 0;
}

.answer::after {
  content: "";
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  border-bottom: 1px solid #f2f2f2;
}

.circle {
  width: 30rpx;
  height: 30rpx;
  border: 2rpx solid #09bb07;
  border-radius: 18rpx;
}

.select {
  background-color: #09bb07;
}

.submit {
  position: absolute;
  left: 50%;
  bottom: 3%;
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  text-align: center;
  border-radius: 6rpx;
  background-color: #09bb07;
  transform: translateX(-50%);
}

.shareButton {
  margin-left: 0;
  margin-right: 0;
  padding-left: 0;
  padding-right: 0;
  font-size: 16px;
  background-color: transparent;
}

.shareButton::after {
  border: none;
}

button::after {
  content: '';
  border: none;
}

.left1 {
  opacity: 0;
  transform: translateX(-100%) scale(0.9, 0.9);
  z-index: 1;
}

.left2 {
  opacity: 0.5;
  transform: translateX(-100%) scale(0.9, 0.9);
  z-index: 2;
}

.current {
  opacity: 1;
  transform: scale(1, 1);
  z-index: 5;
}

.right1 {
  opacity: 0.5;
  transform: translateX(100%) scale(0.9, 0.9);
  z-index: 2;
}

.right2 {
  opacity: 0;
  transform: translateX(100%) scale(0.9, 0.9);
  z-index: 1;
}
