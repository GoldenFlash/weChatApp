page{
  background-color: #fff;
}
.app {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
}

.previewer {
 
  background-color: #fafafa;
  width:100%;
  height: 100%;
}


.previewer .phone {
  position: relative;
  width:100%;
  height:100%;
  -webkit-transition: all .4s ease;
  transition: all .4s ease;
  will-change: width, height, padding;
}
.previewer .phone .bg-cover{ 
  position:absolute;
  top:0;
  bottom:0;
  right:0;
  left:0;
  z-index: 100;
  margin-top:-0.5rem;


}

.background {
  position: absolute;
  width:100%;
  height:100%;
  z-index: 4;
}

.previewer .phone .bg-cover .cover{
  position: absolute;
  width:100%;
  height:100%;
  z-index: 6;
}
.hairStyle{
  position: absolute;
  width:100%;
  height:100%;
  z-index: 6;
}

.previewer .phone:before {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  content: "";
  /*background-image: url(data:image/svg+xml;base64,);*/
  /*background-image: url("http://pics.maiyizhi.cn/Ck5ZkT6fhayfQSm4AskG5SiHm6zwM2sQ.png");*/
  background-repeat: no-repeat;
  background-size: contain;
  z-index: 6;
}

.previewer .phone .yes-img:before {
  bottom: 0;
  z-index: 1;
  content: "";
  background-image: url('http://pics.maiyizhi.cn/lock_screen.svg');
  /*background-image: url('http://pics.maiyizhi.cn/ZWAsmm4SHPJARAwYZAmaX3wNjz5mph65.png');*/
  background-repeat: no-repeat;
  background-position: 50%;
  background-size: contain;
  opacity: 1;
}

.previewer .phone .no-img {
  position: absolute;
  left: 0;
  right: 0;
  z-index: 7;
  display: -webkit-box;
  display: -ms-flexbox;
  display: -webkit-flex;
  display: flex;
  -webkit-box-flex: 1;
  -ms-flex: 1;
  flex: 1;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -ms-flex-direction: column;
  flex-direction: column;
  margin: 0;
}

.previewer .phone .no-img .tip, .previewer .phone .no-img:before {
  position: absolute;
  top: 0;
  right: 0;
  left: 0;
  -webkit-transition: opacity .2s ease;
  transition: opacity .2s ease;
}

.previewer .phone .no-img .tip {
  opacity: 1;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  display: -webkit-box;
  display: -ms-flexbox;
  display: -webkit-flex;
  display: flex;
  padding: .43em .8em;
  margin: 0;
  font-size: 1.25em;
  font-weight: 700;
  color: #fff;
  text-shadow: 0 0 8px rgba(0, 0, 0, .2);
}

.control {
  position: fixed;
  z-index: 101;
  bottom: 0;
  left: 0;
  right: 0;
  padding-bottom: constant(safe-area-inset-bottom);
  font-size:0.8rem;
}

.control .step-1 {
  background-color: #fafafa;
}

.control .step-1 button {
  display: block;
  width: calc(100vw - 240px);
  min-width: 8em;
  max-width: 12em;
  padding: 0;
  margin: 24px auto;
  font-size: 18px;
  font-weight: 700;
  line-height: 48px;
  color: #fff;
  text-align: center;
  background-color: #1aad19;
  border: 0;
  border-radius: 24px;
  outline: 0;
  -webkit-transition: background-color .2s ease;
  transition: background-color .2s ease;
}

.control .step-1:after, .control .step-1:before, .control .step-2:after, .control .step-2:before {
  display: table;
  clear: both;
  content: "";
}

.control .step-2 {
  position: absolute;
  right: 0;
  bottom: 0;
  left: 0;
  background-color:rgba(255,255,255,0);
  
  z-index: 9;
