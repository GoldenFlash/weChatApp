.control .step-2 .step-2-h3 {
  margin: 0;
  font-size: 14px;
  font-weight: 700;
  line-height: 64px;
  color: #1aad19;
  text-align: center;
}
.control .step-2 .control-icon{
  height:6rem;
  width:80%;
  display: -webkit-box;
  display: -ms-flexbox;
  display: -webkit-flex;
  display: flex;
  justify-content:center;
  margin:0 auto;
}
.control .step-2 .control-icon .icon{
  flex:1;
  text-align: center;
  color:#FFFFFF;

}
.control .step-2 .control-icon .icon image{
  width:3rem;
  height:3rem;
}
.control .step-2 .wrap {
  -webkit-box-flex: 1;
  -ms-flex: 1;
  flex: 1;
  padding: 0 16px;
  white-space: nowrap;
}

.control .step-2 .wrap .figure {
  position: relative;
  display: inline-block;
  margin-right: 8px;
}

.control .step-2 .wrap .figure image {
  width: 64px;
  height: 64px;
  padding: 4px;
  margin: 0;
  display: block;
  overflow: hidden;
  background-repeat: no-repeat;
  background-position: 50%;
  background-size: cover;
  border-radius: 12px;
  -webkit-box-shadow: inset 0 0 0 4px #000;
  box-shadow: inset 0 0 0 4px #000;
}

.control .step-2 .wrap .figure span {
  display: inline-block;
  width: 100%;
  margin: 8px 0 0;
  font-size: 12px;
  line-height: 16px;
  text-align: center;
}
