.control {
  position: fixed;
  bottom: 0;
  right: 0;
  left: 0;
  background-color: rgba(255,255,255,1);
  /*  */
  color: rgb(25, 173, 25);
  text-align: center;
  padding-top: 5px;
  z-index: 10;
}

.control view:nth-child(1) {
  line-height: 30px;
}

.step {
  display: flex;
  flex-direction: row;
  height: 20vh;
}

.step view {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
}

.step .step-2 button {
  color: white;
  border-radius: 15px;
  text-align: center;
  background-color: rgb(25, 173, 25);
}

.step .step-3 button {
  color: rgb(25, 173, 25);
  background-color: transparent;
  border: 0;
  font-weight: 100;
  font-size: 18px;
}
.step .step-3 button:after{
  content: "";
  width: 100%;
  top: 0;
  right: 0;
  left: 0;
  padding: 15px;
  border: 5px solid white;
}
