.btn {
  width: 100%;
  margin-top: 40rpx;
  text-align: center;
}

.mainBox {
  position: relative;
  height: 100vh;
}

.weui-grid {
  width: 12.5%;
  border: none;
}

swiper {
  height: 230rpx;
}

.avatarBox {
  display: flex;
  flex-direction: row;
  stroke-width: now;
  width: 100%;
  background-color: rgba(255, 255, 255, 1);
  bottom: 10%;
  justify-content: center;
  align-items: center;
}

.avatarBoxChild {
  position: absolute;
  bottom: 0;
  z-index:3;
  flex-wrap:wrap;
}
.avatarBtnBox{
  display: flex;
  flex-direction: row;
  font-size: 40rpx;
  letter-spacing: 15px;
  background-color: #fff;
  color: white;
  width: 100%;
  /*border-top:1px solid rgba(0,0,0,0.1);*/
  text-align: center;
  padding: 1.5% 0;
}
.avatarBtnBox > view {
  flex: 1;
  /*border: 1px solid;*/
}
.avatarBtnBox > view:nth-child(1){
  text-align: right;
  padding-right: 10px;
}
.avatarBtnBox > view:nth-child(2){
  text-align: left;
  padding-left: 10px;
}
.trangleUp {
  position: relative;
  margin: 5px;
}

.trangleUp:before {
  position: absolute;
  top: -47rpx;
  left: 0px;
  content: "";
  width: 0;
  height: 0;
  border-left: 15px solid transparent;
  border-right: 15px solid transparent;
  border-bottom: 15px solid rgba(255, 255, 255, 1);
}

.avatar {
  padding: 0rpx;
}

.weui-grid__icon {
  width: 100rpx;
  height: 100rpx;
}

/*btn-image*/
.btn-image {

  display: flex;
  flex-direction: row;
  stroke-width: now;
  align-items: center;
  justify-content: center;
  padding: 25rpx;
}

.btn-image > view {
  flex: 1;
  text-align: center;
  margin: 0 15rpx;
}

.upload-avatar {
  /*position: absolute;*/
  display: block;
  color:#1AAD19;
  height:35px;
  background-color:#fff;
  line-height: 35px;
  padding: 5rpx 50rpx;
  border-radius: 22px;
  border:1px solid #1AAD19;
  bottom: 3%;
  left: 5%;
}

.download-phone {
  /*position: absolute;*/
  display: block;
  height:35px;
  line-height: 35px;
  padding: 5rpx 40rpx;
  border-radius: 22px;
  bottom: 3%;
  color: white;
  background-color: #1AAD19;
  right: 5%;
}

.avatar-base {
  color: #1AAD19;
  position: absolute;
  left: calc(50% - 101px);
}
.avatar-base > view{
  padding: 3px 0;
}
.avatar-squ {
  width: 100px;
  text-align: center;
  display: inline-block;
  border: 1px solid #1AAD19;
  border-top-left-radius: 18px;
  border-bottom-left-radius: 18px;
}

.avatar-cir {
  width: 100px;
  text-align: center;
  border: 1px solid #1AAD19;
  border-left-width: 0;
  display: inline-block;
  border-top-right-radius: 18px;
  border-bottom-right-radius: 18px;
}

.avatar-active {
  color: white;
  background-color: #1AAD19;
}
