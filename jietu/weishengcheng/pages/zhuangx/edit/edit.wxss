.weui-select{
    border-right: none;
}
.weui-select-noHeight {
  position:relative;
  padding-right:30px;
  min-height:2.58823529em;
  line-height:2.58823529em;
}
.weui-select-noHeight:before {
  content:" ";
  display:inline-block;
  height:6px;
  width:6px;
  border-width:2px 2px 0 0;
  border-color:#C8C8CD;
  border-style:solid;
  -webkit-transform:matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  transform:matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position:relative;
  top:-2px;
  position:absolute;
  top:50%;
  right:15px;
  margin-top:-4px;
}

.fixButton button::after {
  border: none;
}
