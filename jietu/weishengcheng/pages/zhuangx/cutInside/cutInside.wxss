/* pages/cutImageInside/cutImageInside.wxss */
page{
    height: 100%;
    background-color: #f8f8f8;
}
.cropper-wrapper{
    height: 100%;
    background-color: rgba(0, 0, 0, 0.8);
}

.cropper-buttons{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 50px;
    line-height: 50px;
    z-index: 25;
}

.cropper-buttons .upload, .cropper-buttons .getCropperImage{
    width: 100%;
    text-align: center;
}

.cropper-buttons{
    background-color: rgba(0, 0, 0, 0.95);
    color: #04b00f;
}
