/* pages/counsel/index/index.wxss */
.container {
  background:#F2F2F2 !important;
}
.page {
  position: relative;
  height: 100vh;
}

.cates-box {
  background-color: #fff;
  margin-bottom: 10px;

}

.cates {
  width: 97vw;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 5px 0;
  margin-bottom: 10px;
}

.cates-item {
  width: 25%;
  display: inline-block;
}

.cates-item > view {
  width: 90%;
  padding: 5px 0;
  margin: 5px auto;
  text-align: center;
}

/*title*/
.title {
  width: 94vw;
  margin: 0 auto;
  color: #acacac;
  font-weight: 100;
  border-bottom: 1px solid #d3d3d3;
}

/*content-box*/
.content-box {
  background-color: white;
  padding-top: 15px;
  width: 100%;
}

.list-item {
  padding: 15px;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  /*padding-bottom: 15px;*/
  border-bottom: 1px solid #d3d3d3;
}

.list-item > view {
  display: inline-block;
  width: 20%;

}

.list-item > view:nth-child(1) {
  width: 20%;
  padding-left: 0;

}

.list-item > view:nth-child(1) image {
  width: 60px;
  height: 60px;
  /*margin: 0 auto;*/
  border-radius: 10%;
  display: block;
}

.list-item > view:nth-child(2) {
  width: 57%;
  font-size: 13px;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-left: 2%;
}

.start {
  position: relative;
  font-size: 8pt;
  color: #a3a3a3;
}

.start > view {
  display: inline-block;
}

.text {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #a3a3a3;
}

.content.text {
  letter-spacing: 1pt;
  font-size: 10px;
}

.list-item > view:nth-child(3) {
  width: 20%;
  display: flex;
  display: -webkit-flex;
  align-items: center;
  justify-content: flex-end;
}

.btn-start {
  text-align: center;
  border-radius: 5px;
  line-height: 25px;
  font-size: 13px;
  padding: 0 10px;
  color: #ff8ffb;
  border: 1pt solid #ff8ffb;
}
