.page {
  padding: 0 20px;
}

.title {
  font-size: 18pt;
}

.start {
  font-size: 10px;
  color: #acacac;
}

.start .wux-rater.weui-animate-fade-in {
  display: inline-block;
}

.banner {
  width: 95%;
  display: block;
  margin: 5px auto;
}

.padding {
  padding: 0 5px;
}

.padding text {
  width: 95%;
  margin: 0 auto;
  display: block;
  padding: 0 5px;
  font-size: 13px;
}

.zan-btn.zan-btn--large {
  background-color: #09BB07;
  color: white;
  width: calc(100% - 15px);
  margin: 10px auto;
}

.more {
  padding: 0 5px;
  margin-top: 5vh;
}

.more-title {
  width: calc(100% - 10px);

  height: 30px;
  position: relative;
  background-color: #d3d3d3;
  font-size: 13px;
  border: 1px solid #acacac;
  margin: 0 auto;
}

.more-title view:nth-child(1) {
  text-align: center;
  line-height: 30px;
  font-weight: 100;
}

.more-title view:nth-child(2) {
  color: red;
  float: right;
  position: absolute;
  line-height: 30px;
  right: 5px;
  top: 0;
  bottom: 0;
  font-weight: 600;
}

.more-content {
  width: calc(100% - 10px);
  border: 1px solid #acacac;
  border-top: 0;
  margin: 0 auto 10px;
}

.more-content view {
  padding: 5px;
  border-bottom: 1px dashed #acacac;
}

.more-content view:nth-child(9) {
  border-bottom: 0;
}
