/**index.wxss**/
page{
    background-color: #fff;
}
#slide {
    width: 750rpx;
    height: 400rpx
}

.slide-image {
    width: 100%;
    height: 100%;
}
.notification .notification-text {
line-height:1.5;
}
.grids{
}
.grid{
    border-radius: 75rpx;
    position:relative;
    margin:30rpx 50rpx 0 50rpx;
    width:150rpx;
    height:150rpx;
    box-sizing:border-box;
    position: relative;
}
.weui-grid__icon{
    width: 60rpx;
    height: 60rpx;
    padding-top: 45rpx;
}
.weui-grid__label {
    color:#333;
    font-size: 10pt;
}
.bigItem image{
    width:80rpx;
    height:80rpx;
    margin: 60rpx 0 0 60rpx;
}
.bigItem view{
    color:#fff;
    font-size: 17px;
    margin: 0 0 0 60rpx;
}
.bigItem {
    box-sizing:border-box;
    width:335rpx;
    height:250rpx;
    border-radius:8rpx;
    margin:20rpx;
    padding: 0;
}
