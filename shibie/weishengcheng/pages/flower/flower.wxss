.flower-wrapper{
  width: 750rpx;
  height:100%;
  position:relative;
}
.flower-show {
  background-position: top;
  position: fixed;
  left:0;
  right:0;
  bottom:0;
  top:0;
  width:100%;
  height: 100vh;
  /*filter: blur(4px);*/
}
.flowerbox-wrapper{
  position:absolute;
  left:0;
  right:0;
  top:0;
  bottom: 0;
  height:100vh;
  width:750rpx;
  /*border:solid red 1px;*/
}
.flowerbox-wrapper .swiperItem{
  width:92% !important;
  /*margin:0 auto !important;*/
  /*transform:none !important; */
  left:2.5%;
  padding-left:1.5%;
  /*right:2%;*/
  /*border:solid red 1px;*/
}
.flower-box {
  position: absolute;
  box-sizing: border-box;
  border-radius: 20rpx 20rpx 0 0 ;
  top:700rpx;
  width: 100%;
  padding-top: 10rpx;
  
  padding-bottom:200rpx;
  background-color: rgb(255, 254, 251);
  color: rgba(255, 255, 255, 0.8);
  color:#41423D;
  /*overflow: hidden;*/

  
}

.flower-box .title{
  padding-left: 20rpx;
  padding-top: 20rpx;
  /*font-size: 40rpx;*/
  height:60rpx;
  line-height: 35rpx;
}
.flower-box .wrapper{
  padding-left: 20rpx;
}
.flower-box .wrapper::after{
  content: "";
  display:block;
  clear:both;
}
.flower-box .wrapper .image{
  margin:20rpx 0;
  margin-right:20rpx; 
  float:left;
  width:200rpx;
  height:170rpx;
  border-radius: 10rpx;
}
.flower-box .wrapper .text{
  font-size: 30rpx;
  /*color:red;*/
  line-height:-100px;
}
.flower-box .meitu-wrapper{
  /*width:720rpx;*/
  /*margin:0 auto; */
  margin-top: 20rpx;
  margin-left:45rpx;
  margin-right:45rpx;
}
.flower-box .meitu-wrapper .title{
  text-align: left;
  width:90rpx;
  margin:20rpx auto;
  font-size: 36rpx;
  color:#8F8F8F;
}
