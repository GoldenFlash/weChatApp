.flower-wrapper{
  width: 750rpx;
  height:100%;
}
.flower-show {
  background-position: top;
  position: relative;
  left:0;
  right:0;
  bottom:0;
  top:0;
  width:100%;
  height: 90vh;
  /*filter: blur(4px);*/
}
.flower-box {
  box-sizing: border-box;
  border-radius: 20rpx 20rpx 0 0 ;
  position: absolute;
  top:50%;
  /*left:50%;
  transform: translateX(-50%);*/
  width: 750rpx;
  /*height:500rpx;*/
  /*left: 5%;*/

  /*display: flex;*/
  /*flex-direction: row;*/
