.page-wrapper{
  position:relative;
  left:0;
  right:0;
  top:0;
  bottom:0;
  height:100vh;
  width:100%;
  overflow: hidden;
}
.page-wrapper .content{
  position:absolute;
  left:0;
  right:0;
  top:0;
  bottom:0;
  height:100vh;
  width:100%;
  overflow: hidden;
  z-index: 100;
  background-color: rgba(255,255,255,0);
}
.page-wrapper .headerImage{
  position:relative;
  width:400rpx;
  height:400rpx;
  margin:60rpx auto;
  /*background-color: #FAFAFA;*/
  /*border-radius: 50%;*/
  overflow: hidden;
}
.page-wrapper .headerImage .ellipse{
  position: absolute;
  width:400rpx;
  height:400rpx;
  /*left:50%;*/
}
.page-wrapper .headerImage .inner{
  position:absolute;
  width:270rpx;
  height:270rpx;

  left:49%;
  top:49%;
  transform: translateX(-50%) translateY(-50%);

  /*border:solid green 1px;*/
  border-radius: 50%;
  overflow: hidden;
  /*text-align: center;*/
}
.page-wrapper .headerImage .inner image{
  width:100%;
  height:100%;
}
.page-wrapper .flower-text{
  text-align: center;
  margin-top:50rpx;
  height:300rpx;
}
.page-wrapper .flower-text view:nth-child(1){
  margin:40rpx;
  font-size: 46rpx
}
.page-wrapper .flower-text view:nth-child(2){
  font-size: 32rpx;
  padding:0 50rpx;
  color:#4A4847;
  text-align: left;
}
.page {
  position:absolute;
  height: 100vh;
  width:100%;
  text-align: center;
}
.page .backgroundImage{
  width:187rpx;
  height:183.5rpx;
  margin:-3rpx 0;

}

.flowe-btn {
  position:fixed;
  width:100%;
  /*margin-top: 200rpx;*/
  bottom:100rpx;
}

.flowe-btn > button {
  text-align: center;
  line-height: 86 rpx;
  font-weight: 100;
  width: 90%;
  height: 86 rpx;
  background-color: #5dc981;
  color: #fff;
  border-radius: 86rpx;
  font-size: 30 rpx;
}



