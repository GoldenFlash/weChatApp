  padding-left: 20rpx;
  background-color: rgb(255, 254, 251);
  color: rgba(255, 255, 255, 0.8);
  color:#41423D;
  overflow: hidden;
  
}

.flower-box .title{
  height:40rpx;
}
.flower-box .wrapper .image{
  margin:20rpx 0;
  margin-right:20rpx; 
  float:left;
  width:200rpx;
  height:150rpx;
  border-radius: 10rpx;
}
.flower-box .wrapper .text{
  font-size: 30rpx;
  line-height: 5rpx;
}
.flower-box .meitu >image{
    width:200rpx;
    height:160rpx;
